{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "ES2022"
        }
    }
}
